<Window x:Class="DistributeurBoisson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DistributeurBoisson"
        mc:Ignorable="d"
        Title="Choix de la boisson" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="boissonChoisie" HorizontalAlignment="Left" Margin="69,134,0,0" VerticalAlignment="Top" Width="186" SelectionChanged="choisirBoisson" ItemsSource="{Binding boissons}"/>
        <Label Content="Veuillez sélectionner une boisson" HorizontalAlignment="Left" Margin="69,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.536,-0.949" Width="186" Height="43"/>
        <Label Content="Prix:" HorizontalAlignment="Left" Margin="368,77,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="prixBoisson" HorizontalAlignment="Left" Margin="368,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="24"/>

    </Grid>
</Window>
